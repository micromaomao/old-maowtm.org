extends sub_main_layout

block head
    link(rel="stylesheet",href="https://static.maowtm.org/main_site/error.css")
    title Oops...

block content
    h1= error.toString()
    pre
        =(error.stack?error.stack:error.toString() + '\n    No stack') + '\n'
        | URL: 
        =req.protocol
        | ://
        =req.hostname
        =req.originalUrl
        ='\n'
        | Method:&nbsp;
        =req.method
    p
        a(href="https://github.com/micromaomao/maowtm.org/issues") Report issue on GitHub
        | &nbsp;/&nbsp;
        a(href="/") Home page
